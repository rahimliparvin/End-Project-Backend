
@{
    ViewData["Title"] = "Wishlist";
}

@section Style{

    <link rel="stylesheet" href="~/assets/scss/pages/wishlistpage/wishlistpage.css" />
}

<main>

    <section id="cart">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Tag</th>
                            <th scope="col">Price</th>
                            <th scope="col">Like</th>
                            <th scope="col">Add to Cart</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th class="item" scope="row">1</th>
                            <td>
                                <img src="~/assets/image/aksesuar.jpg" style="width: 70px; height: 70px;" alt="">
                            </td>
                            <td class="item">Ontec</td>
                            <td class="item">Decoration</td>
                            <td class="item">Tag</td>
                            <td class="item">175.55</td>
                            <td class="item">
                                <i class="fa-solid fa-heart dislike"></i>
                            </td>
                            <td class="item" style="padding-top: 20px;">
                              <form>
                                    <button type="submit">Add to cart</button>
                              </form>
                            </td>
                        </tr>

                    </tbody>
                </table>

                <div class="shopcheckout">
                    <a class="getshop" asp-controller="Shop" asp-action="Index">Continue shopping</a> <a class="getcheckout"
                                                                                   asp-controller="Cart" asp-action="Index">Get to Cart</a>
                </div>
            </div>
        </div>
    </section>

</main>


@section Script{

    <script src="~/assets/js/whislist.js"></script>

}