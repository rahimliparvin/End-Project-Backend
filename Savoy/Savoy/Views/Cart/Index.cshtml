
@{
    ViewData["Title"] = "Cart";
}

@section Style{

    <link rel="stylesheet" href="~/assets/scss/pages/cartpage/cartpage.css" />
}

<main>

    <section id="cart">
        <div class="container-fluid">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th class="item" scope="row">1</th>
                            <td>
                                <img src="~/assets/image/aksesuar.jpg" style="width: 70px; height: 70px;" alt="">
                            </td>
                            <td class="item">Ontec</td>
                            <td class="item">175.55</td>
                            <td class="item">
                                <i class="fa-solid fa-minus"></i><input min="1" disabled value="1"  type="number"><i class="fa-solid fa-plus"></i>
                            </td>
                            <td class="item totalprice">175.55</td>
                            <td class="item"><i class="fa-solid fa-xmark"></i></td>
                        </tr>

                    </tbody>
                </table>

                <div class="shopcheckout">
                    <a class="getshop" asp-controller="shop" asp-action="Index">Continue shopping</a> <a class="getcheckout" asp-controller="Checkout" asp-action="Index">Get Checkout</a>
                </div>
            </div>
        </div>
    </section>

</main>


@section Script{

   <script src="~/assets/js/cart.js"></script>
}
