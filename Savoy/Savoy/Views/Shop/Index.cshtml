@model ShopVM

@{
    ViewData["Title"] = "Shop";
}

@section Style{

    <link rel="stylesheet" href="~/assets/scss/pages/shoppage/shoppage.css" />
}

<main>

    <!-- Categories/Search/Filter/Sorted -->
    <section id="categories-search-filter">
        <div class="container-fluid my-3">
            <div class="row">
                <div class="col-lg-9">
                    <div class="categoriesname">
                        <ul>
                            <li data-id="All" class="active allCategoriesName">All<span>/</span></li>

                            @foreach (var category in Model.Categories)
                            {
                                <li class="categoriesName" data-id="@category.Id">@category.Name<span>/</span></li>
                            }

                        </ul>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="filtersort">
                        <ul>
                            <li>Filter<span>/</span></li>
                            <li>Search <i class="fa-solid fa-magnifying-glass"></i></li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="col-lg-12">
                <div class="searcharea d-none">
                    <input placeholder="Search products" type="text"><i class="fa-solid fa-xmark"></i>
                </div>

                <div class="filter d-none">
                    <div class="col-lg-3">
                        <h5>Sort By</h5>
                        <ul>
                            <li>Default</li>
                            <li>Popularity</li>
                            <li>Average rating</li>
                            <li>Newness</li>
                            <li>Price: Low to High</li>
                            <li>Price: High to Low</li>
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <h5>Price</h5>
                        <ul>
                            <li>All</li>
                            <li>$0 - $50</li>
                            <li>$50 - $100</li>
                            <li>$100 - $150</li>
                            <li>$150 - $200</li>
                            <li>$200+</li>
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <h5>Color</h5>
                        <ul class="color">

                            @foreach (var color in Model.Colors)
                            {
                                <li><i class="fa-solid fa-circle"></i><span>@color.Name</span></li>
                            }

                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <div class="tags">
                            <h5>Tags</h5>

                            @foreach (var tag in Model.Tags)
                            {
                                <span>@tag.Name</span>
                            }

                        </div>
                    </div>
                </div>

                <div class="content">

                    <partial name="_ProductPartial" model="@Model.Products" />

                </div>
            </div>

        </div>
    </section>

    <section id="carousel">

        <div class="container-fluid">

            <h2>Relations Products</h2>

            <swiper-container class="mySwiper" space-between="25" slides-per-view="auto" pagination="true"
                              pagination-clickable="true">


                @foreach (var product in Model.Products.OrderByDescending(m=>m.Created).Take(10))
                {
                    <swiper-slide>
                        <div class="productcart">
                           @* <p>@product.Created.ToString("dd MMMM yyyy")</p>*@
                            <img class="firstimg" src="~/assets/image/@product.ProductImages.Where(m=>m.IsMain).FirstOrDefault()?.Image" alt="">
                            <a asp-action="Detail" asp-route-id="@product.Id">
                                <img class="secondimg"
                                 src="~/assets/image/@product.ProductImages.Where(m=>m.HoverImage).FirstOrDefault()?.Image" alt="">
                            </a>
                            <div class="productinfo">

                                <a asp-action="Detail" asp-route-id="@product.Id"><h6>@product.Name</h6></a>

                                <div class="pricelike">
                                    <span class="pricecurrency">$<span>@product.Price</span></span>
                                    <i class="fa-regular fa-heart like"></i>
                                    <i class="fa-solid fa-heart dislike d-none"></i>
                                </div>
                                <form>
                                    <button type="submit" class="showmore">Add to cart</button>
                                </form>
                                <div class="rating">
                                
                                    @for (int i = 0; i < product.RatesWorth / product.RatesCount; i++)
                                    {
                                        <i class="fa-solid fa-star"></i>
                                    }

                                </div>
                            </div>
                        </div>
                    </swiper-slide>
                }


            </swiper-container>
        </div>


    </section>

</main>

@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/shop.js"></script>

}
